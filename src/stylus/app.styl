@import "../CSSmethods/vendor.styl"
@import url("https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900")
@import url("https://fonts.googleapis.com/css?family=Homenaje")

body
  font-family Lato
  margin 0
  padding 0
  border-top 5px solid #00A362
  background #eee

#aberigle
  font-family 'Homenaje', sans-serif
  text-align center
  font-size 14em
  transition-duration 1s
  transition all 1s

  span 
    padding 0 0.05em 0 0.03em
    display inline-block;   
    transition all 0.5s
    perspective 1000px
    transform-style preserve-3d
    background #eee
    background-size cover
    &:after
      background rgba(0,0,0,0.2)
      content ""
      position absolute
      width 100%
      height 50%
      left 0
      bottom 0
      transform rotateX(90deg)    
      transform-origin bottom
    &:before
      content ""
      position absolute
      top 0
      left 0
      background rgba(0,0,0,0)
      width 100%
      height 100%
      box-shadow 0 0 10px 10px rgba(0,0,0,0)
      transition all .5s
      transform rotateX(80deg) translateZ(-50px) scale(0.75)
      transform-origin bottom
    &:hover
      transform rotateX(30deg)
      transform-origin bottom
      &:before
        opacity 1
        background rgba(0,0,0,0.5)
        box-shadow -5px 0 10px 10px rgba(0,0,0,0.5)
        transform rotateX(0) translateZ(-130px) scale(0.85)
    &.in
      box-shadow 0px 1px 10px #aaa inset
    &.out
      box-shadow 0px 1px 5px #aaa

